<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="@dimen/globalDimenMid"
    android:gravity="center"
    android:id="@+id/containerErrorDisplay"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/globalDimenMid"
        android:gravity="center"
        android:text="oops! Something went wrong, Please try again later."
        android:textColor="@android:color/black"
        android:textSize="@dimen/normalTextSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/globalDimen"
            android:text="Retry"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/globalDimen"
            android:text="Settings"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>