<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/sliderWidth"
    android:layout_height="@dimen/sliderHeight">

    <ImageView
        android:id="@+id/imgSliderPoster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/sliderSubtitleMarginBottom"
        android:layout_marginLeft="@dimen/globalDimen"
        android:layout_marginRight="@dimen/globalDimen"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSliderCellTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:text="Movie title"
            android:textColor="@color/globalWhiteColor"
            android:textSize="@dimen/sliderTitleTextSize" />


        <TextView
            android:id="@+id/tvSliderCellSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/globalDimenMid"
            android:singleLine="true"
            android:text="Movie Subtitle"
            android:textColor="@color/globalWhiteColor"
            android:textSize="@dimen/sliderSubTitleTextSize" />

    </LinearLayout>

</FrameLayout>